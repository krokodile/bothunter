div#sign-in-modal.modal.hide.fade.alert-message
  h2 Войти
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=> {:class=>"form-stacked"}) do |f|
    = devise_error_messages!
    div class="clearfix"
      = f.label :email
      div class="input"
        = f.email_field :email
    div class="clearfix"
      = f.label :password, "Пароль"
      div class="input"
        = f.password_field :password
    div class="clearfix"
      - if devise_mapping.rememberable?
          = f.label :remember_me, "Запомнить меня"
          = f.check_box :remember_me
    div class="clearfix"
      = f.submit "Войти", :class => "btn primary"
