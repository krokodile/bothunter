<%= semantic_form_for @user, url: create_as_admin_users_path do |f| %>
  <%= f.input :full_name, required: false, input_html: { tabindex: 1, autofocus: true } %>
  <%= f.input :email, required: false, input_html: { tabindex: 2 } %>
  <%= f.input :phone_number, required: false, input_html: { tabindex: 3 } %>
  <%= f.input :company, required: false, input_html: { tabindex: 4 } %>
  <%= f.input :password, required: false, input_html: { tabindex: 5 } %>
  <%= f.input :password_confirmation, required: false, input_html: { tabindex: 6 } %>

  <%= f.input :promocode_value, required: false, as: :select, collection: Promocode.available.map { |code| [code.code, code.id] }, input_html: { tabindex: 7 }, label: 'Промо-код (опционально)' %>

  <%= f.input :groups_limit, required: false, as: :string, input_html: { tabindex: 8 } %>
  <%= f.input :people_limit, required: false, as: :string, input_html: { tabindex: 9 } %>

  <%= f.input :rights, required: false, as: :select, collection: User::RIGHTS.map { |right| [I18n.t("titles.rights.#{right}"), right] }, input_html: { tabindex: 10 } %>

  <%= f.input :approved, required: false, as: :boolean, input_html: { tabindex: 11 } %>

  <br>

  <%= f.submit nil, class: 'btn btn-primary', tabindex: 12 %>
<% end %>
