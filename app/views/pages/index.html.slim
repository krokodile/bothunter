div class="row"
  div class="span5"
    h2
      | Группы
    ul
     - @groups.each do |group|
      li
        = link_to "#{group.title}", group_path(group)
    h4
      | Добавить группу
    = form_for add_group_path, :method => :post do
      div class="clearfix"
        = text_field_tag 'group_url', params['group_url'], :class => 'span5', :placeholder => 'http://vk...'
      div class="clearfix"
        = submit_tag 'Добавить', :class => 'btn primary small'
